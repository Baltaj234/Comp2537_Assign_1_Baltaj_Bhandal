<!-- All the code for the 404 Page -->


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Not Found</title>
    <style>
        /* All styles for the 404 Page */
        body {
            font-family: sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }
        .error-code {
            font-size: 10em;
            color: #d32f2f;
            margin-bottom: 20px;
        }
        .message {
            font-size: 1.5em;
            color: #757575;
            text-align: center;
        }
    </style>
</head>
<body>
    <div>
        <!-- The error message displayed to the user -->
        <h1 class="error-code">404</h1>
        <p class="message">Page not found</p>
    </div>
</body>
</html>