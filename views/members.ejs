<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Area</title>
    <!-- Linking Bootstrap to the file-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        /* All custom styles needed beyond Bootstrap */
        body {
            font-family: sans-serif;
            margin: 20px;
        }
       
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Hello, <%= user.name %>!</h1>
        <div class="image-grid row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <!-- rendering all of the images -->
            <% images.forEach(image => { %>
                <div class="col">
                    <div class="card">
                        <img src="/images/<%= image %>" class="card-img-top img-fluid" alt="Welcome Image">
                        <div class="card-body">
                            <!-- Text the shows filename of image-->
                            <p class="card-text text-center"><%= image %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
            <!-- Option to go to admin page -->
            <a href="/admin" class="btn btn-info">Go to Admin Page</a>
        </div>
        <div class="logout text-center mt-4">
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>
</body>
</html>