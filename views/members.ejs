
<!-- All the code for the Members Page-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Area</title>
    <style>
        /* All styles used for the members page */
        body {
            font-family: sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
        }
        h1 {
            text-align: center;
        }
        .random-image {
            text-align: center;
            margin-bottom: 20px;
        }
        .logout {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Hello message to the whoever logged in -->
         <!-- Displays Hello followed by the user's name (which they made in the sign up process) -->

        <h1>Hello, <%= user.name %>!</h1>
        <div class="random-image">

            <!-- Displaying the randomly selected image in the screen -->
            <img src="/images/<%= randomImage %>" alt="Random Image">
        </div>
        <div class="logout">
            <!-- Allowing the user to log out-->
            <a href="/logout">Logout</a>
        </div>
    </div>
</body>
</html>