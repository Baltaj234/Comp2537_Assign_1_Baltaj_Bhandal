

<div class="container mt-4">
    <h1>Admin Page</h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <!-- Displaying all the user's info in table form -->
                <th>Name</th>
                <th>Email</th>
                <th>User Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.user_type %></td>
                    <td>
                        <% if (user.user_type === 'admin') { %>
                            <!-- If user is an admin you can demote them to a normal user-->
                            <form action="/demote/<%= user.name %>" method="post" class="d-inline">
                                <button type="submit" class="btn btn-warning btn-sm">Demote</button>
                            </form>
                        <% } else { %>
                            <!-- If user is normal user you can promote them to an admin -->
                            <form action="/promote/<%= user.name %>" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm">Promote</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <form action="/logout" method="get" class="mt-3">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
</div>

